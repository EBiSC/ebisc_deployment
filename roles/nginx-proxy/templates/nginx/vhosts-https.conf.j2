{% for domain in ims_domains %}
{% if domain.public %}
server {
  listen 8443;
  server_name {{ domain.name }};

  location / {
{% if domain.name == main_ims_domain %}
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_pass http://{{ ims_host }}:{{ ims_port }};
{% else %}
    rewrite ^/(.*) https://{{ main_ims_domain }}/$1 permanent;
{% endif %}
  }
  ssl on;
  ssl_certificate     /etc/letsencrypt/live/{{ main_ims_domain }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ main_ims_domain }}/privkey.pem;
}
{% endif %}
{% endfor %}
